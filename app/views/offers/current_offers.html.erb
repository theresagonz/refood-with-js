<h1 class="slab-font sm-margin-bottom">Open offers</h1>

<% if @offers.present? %>
  <ul class="margin-bottom">
  <% @offers.each do |offer| %>
    <li class="list-obj left-padding">
      <div><%= link_to offer.headline, offer %></div>
      <% if offer.city %>
        <div><%= offer.city_state %></div>
      <% else %>
        <div>Ask for location info</div>
      <% end %>
      <div class="small grey-text">Posted <%= time_ago(offer) %> ago</div>
    </li>
  <% end %>

<% else %>
  <br>
  <h3 class="slab-font">No open offers. Check back soon!</h3>
<% end %>

<br>
<h4 class="slab-font"><%= link_to "Sign up for an account to get started", signup_path %></h4>
<h6 class="slab-font"><%= link_to "Already have an account? Log in now", login_path %></h6>